<% include partials/header %>
<div class="container">
    <h1 class="text-center" >Create a new Yelpcampgrounds !!</h1>

    <form class="form-horizontal" action="/campgrounds" method="POST">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">Campground's Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" name="campName">
            </div>
        </div>
        <div class="form-group">
            <label for="inputImage" class="col-sm-2 control-label">Add Image</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" name="campImage">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Add Campground</button>
            </div>
        </div>
    </form>

    <a class="btn btn-default" href="/campgrounds" role="button">Back to Campgrounds</a>
</div>





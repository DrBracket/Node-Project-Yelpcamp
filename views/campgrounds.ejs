</nav>

<div  class="container">
    <header class="jumbotron">
        <div>
            <h1>All ours campgrounds!!</h1>
            <a class="btn btn-primary btn-lg" href="/campgrounds/newCamp" role="button" style=" margin-top: 20px; ">Inserisci un nuovo campeggio</a>
        </div>
    </header>
	
    <div class="row text-center" style="display:flex; flex-wrap; wrap">
        <% campgrounds.forEach(function(camp) { %>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="thumbnail">
                <div class="caption">
                    <h3><strong><%= camp.name %></strong></h3>
                </div>   
                <img src="<%= camp.image %>">
            </div>
        </div>
        <%  }); %>
    </div>
</div>

	

